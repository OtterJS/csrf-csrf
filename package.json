{
  "name": "csrf-csrf",
  "version": "3.0.4",
  "description": "A utility package to help implement stateless CSRF protection using the Double Submit Cookie Pattern in express.",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "exports": {
    ".": {
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/cjs/index.cjs"
      },
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/esm/index.js"
      }
    }
  },
  "types": "./lib/index.d.ts",
  "files": ["lib/**"],
  "scripts": {
    "test": "mocha --recursive ./src/tests/*.test.ts",
    "clean": "rm -rf ./dist",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "build": "tsup",
    "build:clean": "npm run clean && npm run build",
    "pack": "npm pack",
    "pack:clean": "rm -rf *.tgz && npm run pack",
    "prebuild": "npm run type-check",
    "changelog": "standard-version",
    "type-check": "tsc --noEmit"
  },
  "author": "psibean",
  "license": "ISC",
  "homepage": "https://github.com/Psifi-Solutions/csrf-csrf",
  "repository": "https://github.com/Psifi-Solutions/csrf-csrf",
  "keywords": ["csrf", "middleware", "tokens"],
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@tinyhttp/app": "^2.2.4",
    "@tinyhttp/cookie-parser": "^2.0.6",
    "@types/chai": "^4.3.11",
    "@types/http-errors": "^2.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.15.8",
    "chai": "^4.3.10",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "cookie-signature": "^1.2.1",
    "mocha": "^10.2.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@tinyhttp/cookie": "^2.1.1",
    "@tinyhttp/cookie-signature": "^2.1.1",
    "http-errors": "^2.0.0"
  }
}
